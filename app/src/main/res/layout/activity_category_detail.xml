<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.main.CategoryDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_general_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCategoryDescription"
                style="@style/PricelyInterRegularText.BlackIndigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:textSize="@dimen/text_size_12sp"
                app:lineHeight="@dimen/dimen_20dp"
                tools:targetApi="o"
                tools:text="@string/samples_description" />

            <View style="@style/PricelySectionDivider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVerticalProdcuts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_product"
                tools:spanCount="2" />

            <View android:id="@+id/sectionRecommendation"
                style="@style/PricelySectionDivider" />

            <TextView
                android:id="@+id/tvSectionTitle"
                style="@style/PricelyProductSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:text="@string/label_recommendation"
                android:layout_marginVertical="@dimen/dimen_12dp"
                android:textColor="@color/grayBlackish"
                android:layout_marginStart="@dimen/dimen_24dp"
                app:layout_constraintEnd_toStartOf="@id/btnViewAllProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVerticalRecommendation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_product"
                tools:spanCount="2" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>