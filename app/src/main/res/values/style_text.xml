<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PricelyInterBlackText">
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="fontFamily">@font/inter_black</item>
    </style>

    <style name="PricelyInterRegularText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="PricelyInterRegularText.AnotherGrey">
        <item name="android:textColor">@color/anotherGrey</item>
    </style>

    <style name="PricelyInterRegularText.BlackIndigo">
        <item name="android:textColor">@color/blackIndigo</item>
    </style>

    <style name="PricelyInterRegularText.GreyBlackish">
        <item name="android:textColor">@color/greyBlackish</item>
    </style>

    <style name="PricelyInterBoldText">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="PricelyInterBoldText.GreyBlackish">
        <item name="android:textColor">@color/greyBlackish</item>
    </style>

    <style name="PricelyInterMediumText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="PricelyInterMediumText.AnotherGrey">
        <item name="android:textColor">@color/anotherGrey</item>
    </style>

    <style name="PricelyInterSemiBoldText.GreenLeaf">
        <item name="android:textColor">@color/greenLeaf</item>
    </style>

    <style name="PricelyInterSemiBoldText">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="PricelyInterSemiBoldText.GreyBlackish">
        <item name="android:textColor">@color/greyBlackish</item>
    </style>

<!--    Toolbar-->
    <style name="PricelyToolbarTextAppearance" parent="PricelyInterBoldText">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

<!--    Button-->
    <style name="PricelyButtonTextAppearance" parent="PricelyInterBoldText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PricelyTextButtonTextAppearance" parent="PricelyInterSemiBoldText.GreenLeaf">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <dimen name="text_size_14sp">14sp</dimen>
</resources>