<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PricelyProductSectionTitle" parent="PricelyInterBoldText.GreyBlackish">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PricelyProductName" parent="PricelyInterBoldText.GreyBlackish">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="PricelyProductWeight" parent="PricelyInterMediumText.AnotherGrey">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="category_text">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PricelyCategoryIcon">
        <item name="android:layout_width">@dimen/dimen_56dp</item>
        <item name="android:layout_height">@dimen/dimen_56dp</item>
    </style>

    <style name="PricelySectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/section</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
    </style>

    <style name="horizontal_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vertical_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <dimen name="dimen_56dp">56dp</dimen>
    <dimen name="text_size_10sp">10sp</dimen>
</resources>