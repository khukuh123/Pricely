<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pricely" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenLeaf</item>
        <item name="colorPrimaryVariant">@color/greenBrighter</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenDarker</item>
        <item name="colorSecondaryVariant">@color/greenDarker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="materialButtonStyle">@style/PricelyPrimaryButton</item>
        <item name="materialButtonOutlinedStyle">@style/PricelyOutlinedButton</item>
        <item name="toolbarStyle">@style/PricelyToolbar</item>
        <item name="textInputStyle">@style/PricelyTextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/PricelyBottomSheet</item>
    </style>

<!--    DropDownMenu-->
    <style name="PricelyExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="shapeAppearance">@style/PricelyShape.ExposedDropDownMenu</item>
        <item name="endIconTint">@color/anotherGrey</item>
        <item name="boxBackgroundColor">@color/whiteGrayish</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">
        <item name="colorPrimary">@color/greenLeaf</item>
        <item name="colorOnSurface">@color/greenDarker</item>
        <item name="autoCompleteTextViewStyle">@style/PricelyAutoCompleteTextView</item>
    </style>

    <!--    AutoCompleteTextView-->
    <style name="PricelyAutoCompleteTextView" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:minWidth">@dimen/dimen_100dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">none</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <!--    Button-->
    <style name="PricelyPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/PricelyButtonTextAppearance</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">@dimen/dimen_120dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_8dp</item>
        <item name="shapeAppearance">@style/PricelyShape.Button</item>
    </style>

    <style name="PricelyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">@dimen/dimen_120dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/greenLeaf</item>
        <item name="android:textAppearance">@style/PricelyButtonTextAppearance</item>
        <item name="shapeAppearance">@style/PricelyShape.Button</item>
    </style>

    <style name="PricelyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">@dimen/dimen_0dp</item>
        <item name="android:minWidth">@dimen/dimen_0dp</item>
        <item name="android:textAppearance">@style/PricelyTextButtonTextAppearance</item>
    </style>
    
    <style name="PricelyPrimaryButton.IconOnly">
        <item name="iconGravity">textStart</item>
        <item name="android:paddingStart">@dimen/dimen_0dp</item>
        <item name="android:paddingEnd">@dimen/dimen_0dp</item>
        <item name="iconPadding">@dimen/dimen_0dp</item>
    </style>

    <!--    ShapeAppearance-->
    <style name="PricelyShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_16dp</item>
    </style>

    <style name="PricelyShape.ExposedDropDownMenu">
        <item name="cornerSize">@dimen/dimen_8dp</item>
    </style>

    <style name="PricelyShape.Button">
        <item name="cornerSize">@dimen/dimen_32dp</item>
    </style>

    <style name="PricelyShape.8">
        <item name="cornerSize">@dimen/dimen_8dp</item>
    </style>

    <style name="PricelyShape.TopOnly">
        <item name="cornerSizeTopLeft">@dimen/dimen_16dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen_16dp</item>
    </style>

    <!--    LoadingDialog-->
    <style name="PricelyLoadingDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

<!--    Splashscreen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/greenBrighter</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.Pricely</item>
    </style>

    <!--    Toolbar-->
    <style name="PricelyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/PricelyToolbarTextAppearance</item>
    </style>

<!--    TextInputLayout-->
    <style name="PricelyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0dp</item>
        <item name="hintEnabled">false</item>
        <item name="shapeAppearanceOverlay">@style/PricelyShape</item>
    </style>

    <style name="PricelyTextInputLayout.Search">
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/red</item>
        <item name="shapeAppearanceOverlay">@style/PricelyShape.8</item>
    </style>

<!--    TextInputEditText-->
    <style name="PricelyTextInputEditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/hint_search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/PricelyInterRegularText</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_0dp</item>
    </style>

<!--    BottomSheet-->
    <style name="PricelyBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/PricelyShape</item>
    </style>
</resources>